<UserControl x:Class="AppUI.Views.MarkerPageFooter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppUI.Views"
             xmlns:vm="clr-namespace:AppUI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="167" d:DesignWidth="1920">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}"/>
            <DataTemplate x:Key="PanelMarkerCorrectTemplate">
                <DockPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button Command="{Binding MarkerCorrectCommand}">はい</Button>
                    <Button Margin="80,0,0,0" VerticalAlignment="Stretch"
                            Command="{Binding MarkerUnCorrectCommand}">いいえ</Button>
                </DockPanel>
            </DataTemplate>

            <DataTemplate x:Key="PanelMarkerSettingTemplate">
                <DockPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button MinWidth="200"
                            IsEnabled="{Binding IsRoiSettingExecutable}"
                            Command="{Binding GoToRoiSettingCommand}">関心領域の設定へ進む</Button>
                    <Button Margin="80,0,0,0" VerticalAlignment="Stretch"
                            Command="{Binding MarkerStartOverCommand}">やり直す</Button>
                </DockPanel>
            </DataTemplate>

            <DataTemplate x:Key="PanelRoiSettingTemplate">
                <DockPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Stretch"
                            Command="{Binding RoiSettingCorrectCommand}">はい</Button>
                </DockPanel>
            </DataTemplate>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="1" LastChildFill="False">
                <Button
                    x:Name="SettingButton"
                    DockPanel.Dock="Left"
                    Style="{StaticResource RoundedButtonStyleShort}"
                    Margin="10,10,0,10"
                    Command="{Binding SettingButtonCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                    Tag="{Binding ActiveSettingStatus}">設定</Button>
                <Popup
                    IsOpen="{Binding IsSettingOpen, Mode=TwoWay}"
                    PlacementTarget="{Binding ElementName=SettingButton}"
                    Placement="Top"
                    StaysOpen="True" 
                    VerticalOffset="-20"
                    AllowsTransparency="True">
                    <Grid Height="114" Width="160" Background="{StaticResource BackBrush}">
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Button HorizontalAlignment="Right"
                                            Width="40" 
                                            Background="Transparent" BorderBrush="Transparent"
                                            Command="{Binding SettingCloseCommand}">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                                        Text="&#xE8BB;"
                                                        VerticalAlignment="Center"/>
                                </Button>
                                <Button Grid.Row="1" Margin="5"
                                            Style="{StaticResource RoundedButtonStyle}"
                                            Tag="{Binding ActiveVersionStatus}"
                                            Command="{Binding VersionInformationButtonCommand}">
                                    <StackPanel>
                                        <TextBlock HorizontalAlignment="Center">バージョン</TextBlock>
                                        <TextBlock HorizontalAlignment="Center">情報</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Popup>
            </DockPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Style="{StaticResource TextBlockMarkerPageFotterMessage}"
                           Text="{Binding ConfirmMessage}"/>
                <TextBlock Grid.Column="1" 
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Style="{StaticResource TextBlockMarkerPageFotterMessage}"
                           Text="{Binding MarkerProgressMessage}"
                           Visibility="{Binding IsMarkerSetting, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0" Content="{Binding}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PanelTemplateSelect}" Value="{x:Static vm:MarkerRoiConfirmType.MarkerCorrect}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource PanelMarkerCorrectTemplate}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PanelTemplateSelect}" Value="{x:Static vm:MarkerRoiConfirmType.MarkerSetting}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource PanelMarkerSettingTemplate}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PanelTemplateSelect}" Value="{x:Static vm:MarkerRoiConfirmType.RoiSetting}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource PanelRoiSettingTemplate}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
